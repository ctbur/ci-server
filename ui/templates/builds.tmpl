{{ define "page_builds" }}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>CI</title>
        <link
            rel="icon"
            type="image/x-icon"
            href="/static/images/favicon.ico"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="/static/css/reset.css" />
        <link rel="stylesheet" href="/static/css/theme.css" />
        <link rel="stylesheet" href="/static/css/layout.css" />
        <link rel="stylesheet" href="/static/css/typography.css" />
        <link rel="stylesheet" href="/static/css/cards.css" />
    </head>

    <body class="no-sidebar">
        <header class="container">
            <h1>Builds</h1>
        </header>

        <main class="container">
            <section id="builds">
                <ul class="card-list">
                    {{- range .BuildCards }}
                    <a href="/builds/{{ .ID }}" class="card-link">
                        <li class="card build-details">
                            <div class="build-details-item status">{{ .Status }}</div>
                            <div class="build-details-item author">{{ .Author }}</div>
                            <div class="build-details-item message">{{ .Message }}</div>
                            <div class="build-details-item ref">{{ .Ref }}</div>
                            <div class="build-details-item duration">{{ formatDuration .Duration }}</div>
                            <div class="build-details-item commit-sha">{{ .CommitSHA }}</div>
                            <div class="build-details-item created">{{ .Created.Format "Jan 2, 15:04" }}</div>
                        </li>
                    </a>
                    {{- end }}
                </ul>
            </section>
        </main>
    </body>
</html>
{{ end }}
