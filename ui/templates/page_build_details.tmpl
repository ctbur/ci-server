{{ define "page_build_details" }}
<!doctype html>
<html lang="en">
    <head>
        {{ template "comp_head" }}

        <script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.8/dist/htmx.min.js" integrity="sha384-/TgkGk7p307TH7EXJDuUlgG3Ce1UVolAOFopFekQkkXihi5u/6OCvVKyz1W+idaz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/htmx-ext-sse@2.2.4" integrity="sha384-A986SAtodyH8eg8x8irJnYUk7i9inVQqYigD6qZ9evobksGNIXfeFvDwLSHcp31N" crossorigin="anonymous"></script>

        <title>CI</title>
    </head>

    <body>
        <header>
            <h1>Build</h1>
        </header>

        <main>
            <section id="build-title">
                <div class="build-title-container">
                    <span class="build-title-name">{{ .RepoOwner }}/{{ .RepoName }} #{{ .Number }}</span>
                    <span class="build-title-message">{{ .Message }}</span>
                    <span class="build-title-status" style="{{ template "comp_build_status_color" .Status }}">{{ .Status }}</span>
                </div>
            </section>
            <section id="build-logs">
                <div
                    id="sse-logs"
                    hx-ext="sse"
                    sse-connect="/hx/builds/{{ .ID }}/log-stream?fromLine={{ len .LogLines }}"
                    sse-swap="log-line"
                    hx-swap="beforeend"
                    hx-target="#log-container"
                    sse-close="build-finished"
                ></div>
                <div id="log-container" class="log-container">
                    {{- range $i, $e := .LogLines }}
                        {{ template "comp_log_line" . }}
                    {{- end }}
                </div>
            </section>
        </main>
    </body>
</html>
{{ end }}
